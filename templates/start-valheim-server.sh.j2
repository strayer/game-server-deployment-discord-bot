#!/usr/bin/env bash
set -euo pipefail

/usr/local/bin/notify-discord-server-starting.sh || true

export SteamAppId=892970
export LD_LIBRARY_PATH=/opt/valheim/linux64:${LD_LIBRARY_PATH:-}

cd /opt/valheim

exec /opt/valheim/valheim_server.x86_64 -nographics -batchmode -name "{{ lookup('env', 'VALHEIM_SERVER_NAME') }}" -port 2456 -world "{{ lookup('env', 'VALHEIM_SERVER_WORLD') }}" -password "{{ lookup('env', 'VALHEIM_SERVER_PASSWORD') }}" -public 0

